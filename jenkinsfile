pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Docker Image') {
      steps {
        bat 'docker build -t demo-ci-cd .'
      }
    }

    stage('Run Docker Container') {
      steps {
        bat '''
        docker rm -f demo-ci-cd || exit 0
        docker run -d -p 3002:3000 --name demo-ci-cd demo-ci-cd:latest
        '''
      }
    }
  }
}
